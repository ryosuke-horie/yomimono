{
	"name": "yomimono-api",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"dev": "NODE_ENV=development wrangler dev --port 8787 --env development --local",
		"deploy": "NODE_ENV=production wrangler deploy --minify --env=\"\"",
		"lint": "biome check",
		"format": "biome check --write",
		"knip": "knip",
		"test": "vitest run",
		"generate": "pnpm exec tsx src/scripts/generate-openapi.ts",
		"d1:reset:local": "pnpm exec tsx src/scripts/reset-miniflare-d1.ts",
		"migrate:dev:local": "wrangler d1 migrations apply yomimono-db-dev --local --env development",
		"migrate:prod:remote": "wrangler d1 migrations apply yomimono-db --remote",
		"db:generate": "drizzle-kit generate",
		"ensure:better-sqlite3": "pnpm exec tsx src/scripts/ensure-better-sqlite3.ts",
		"seed": "pnpm run ensure:better-sqlite3 && pnpm run d1:reset:local && pnpm run migrate:dev:local && NODE_ENV=development SEED_PRESET=clear pnpm exec tsx src/db/seed/seed-runner.ts && NODE_ENV=development pnpm exec tsx src/db/seed/seed-runner.ts"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.0",
		"hono": "^4.10.7"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@cloudflare/workers-types": "^4.20251205.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "4.0.15",
		"better-sqlite3": "^12.5.0",
		"drizzle-kit": "^0.31.8",
		"happy-dom": "^20.0.11",
		"knip": "^5.71.0",
		"only-allow": "^1.2.2",
		"openapi3-ts": "^4.5.0",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "4.0.15",
		"wrangler": "^4.53.0",
		"yaml": "^2.8.2"
	},
	"overrides": {
		"esbuild": "^0.25.5"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"better-sqlite3",
			"esbuild",
			"sharp",
			"workerd"
		]
	}
}
