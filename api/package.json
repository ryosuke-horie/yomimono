{
	"name": "effective-yomimono-api",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"dev": "NODE_ENV=development wrangler dev --port 8787 --env development --local",
		"deploy": "NODE_ENV=production wrangler deploy --minify --env=\"\"",
		"lint": "biome check",
		"format": "biome check --write",
		"knip": "knip",
		"test": "vitest run",
		"migrate:production": "NODE_ENV=production drizzle-kit migrate",
		"migrate:development": "NODE_ENV=development drizzle-kit migrate",
		"migrate:dev:local": "wrangler d1 migrations apply yomimono-db-dev --local --env development",
		"migrate:prod:remote": "wrangler d1 migrations apply yomimono-db --remote",
		"db:generate": "drizzle-kit generate",
		"db:studio": "drizzle-kit studio",
		"db:studio:dev": "NODE_ENV=development drizzle-kit studio",
		"db:studio:prod": "NODE_ENV=production drizzle-kit studio",
		"seed": "pnpm run seed:clear && NODE_ENV=development pnpm exec tsx src/scripts/seed-runner.ts",
		"seed:test": "NODE_ENV=development SEED_PRESET=test pnpm exec tsx src/scripts/seed-runner.ts",
		"seed:clear": "NODE_ENV=development SEED_PRESET=clear pnpm exec tsx src/scripts/seed-runner.ts"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@cloudflare/workers-types": "^4.20251014.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^24.10.0",
		"@vitest/coverage-v8": "4.0.6",
		"better-sqlite3": "^12.4.1",
		"drizzle-kit": "^0.31.6",
		"happy-dom": "^20.0.10",
		"knip": "^5.67.1",
		"only-allow": "^1.2.1",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "4.0.6",
		"wrangler": "^4.45.3"
	},
	"overrides": {
		"esbuild": "^0.25.5"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"better-sqlite3",
			"esbuild",
			"sharp",
			"workerd"
		]
	}
}
